<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to t('apptitle'), root_path, id: "logo" %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="glyphicon glyphicon-menu-hamburger" style="color:white;border-color:#34302D;background-color:#34302D"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('index.header.home'),   root_path %></li>
          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('index.header.my_account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('index.header.profile'), current_user %></li>
              <li><%= link_to t('index.header.settings'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t('index.header.logout'), logout_path, method: "delete" %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t('index.signin'), login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
